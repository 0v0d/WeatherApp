<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="DetailLinerLayout">
    <item name="android:orientation">horizontal</item>
    <item name="android:weightSum">2</item>
  </style>

  <style name="DualPaneLayout">
    <item name="android:orientation">vertical</item>
    <item name="android:gravity">center</item>
    <item name="android:padding">5dp</item>
  </style>

  <style name="DetailTitle">
    <item name="android:layout_gravity">center</item>
    <item name="android:textSize">@dimen/text_small</item>
  </style>

  <style name="DetailValue">
    <item name="android:textSize">@dimen/text_medium</item>
    <item name="android:gravity">center</item>
  </style>

  <style name="ListTextView">
    <item name="android:layout_marginEnd">20dp</item>
    <item name="android:textSize">20sp</item>
  </style>

  <style name="MainContainer">
    <item name="android:layout_centerVertical">true</item>
    <item name="android:gravity">center|top</item>
    <item name="android:orientation">vertical</item>
  </style>

  <style name="CurrentWeatherButton">
    <item name="android:layout_alignParentStart">true</item>
    <item name="android:layout_centerVertical">true</item>
    <item name="android:backgroundTint">@color/translucent</item>
    <item name="android:text">@string/current_weather</item>
    <item name="android:textSize">20sp</item>
    <item name="android:gravity">center|top</item>
    <item name="android:orientation">vertical</item>
    <item name="android:visibility">invisible</item>
  </style>
  
</resources>